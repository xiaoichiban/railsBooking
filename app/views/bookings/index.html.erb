<% if user_signed_in? %>

<h1>Bookings</h1>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Facility</th>
        <th>Name</th>
        <th>Contact no</th>
        <th>Booking date</th>
        <th>Timeslot</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
      <%= booking.inspect %>
        <tr>
          <td><%= booking.user.email %></td>
          <td><%= booking.name %></td>
          <td><%= booking.user.contact_number %></td>
          <td><%= booking.booking_date %></td>
          <td><%= booking.timeslot %></td>
          <td><%= link_to 'Info', booking, class:"btn btn-sm btn-outline-info" %></td>
          <td><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Booking', new_booking_path, class:"btn btn-primary" %>

<% else %>
  <h1>Home#index</h1>
<% end %>