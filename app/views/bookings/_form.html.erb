<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :facility %>
    <%= form.date_select :booking_date, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :booking_date %>
    <%= form.date_select :booking_date, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :timeslot %>
    <%= form.time_select :timeslot, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :booking_user_id,
    class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
